{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "plugins": [
    "react"
  ],
  "settings": {
    "react": {
      "createClass": "createReactClass",
      "pragma": "React",  // Pragma to use, default to "React"
      "version": "16.8", // React version, default to the latest React stable release
      "flowVersion": "0.53" // Flow version
    },
    "propWrapperFunctions": [ "forbidExtraProps" ]
  },
  "extends": [
    "airbnb",
    "plugin:react/recommended"
  ],
  "rules": {
    "semi": "off",
    "quote-props": "off",
    "arrow-parens": "off",
    "camelcase": "off",
    "class-methods-use-this": "off",
    "func-names": "off",
    "import/extensions": "off",
    "import/imports-first": "off",
    "max-len": ["error", 100500],
    "no-unused-vars": ["error", { "args": "none" }],
    "no-confusing-arrow": ["error", {"allowParens": true}],
    "no-plusplus": "off",
    "no-underscore-dangle": "off",
    "object-curly-newline": "off",
    "object-property-newline": "off",
    "object-shorthand": "off",
    "indent": ["error", 2, {"ignoredNodes": ["JSXElement", "JSXElement > *", "JSXAttribute", "JSXIdentifier", "JSXNamespacedName", "JSXMemberExpression", "JSXSpreadAttribute", "JSXExpressionContainer", "JSXOpeningElement", "JSXClosingElement", "JSXText", "JSXEmptyExpression", "JSXSpreadChild"]}],
    "react/jsx-indent": ["error", 2],
    "prefer-destructuring": "off",
    "no-bitwise": "off"
  },
  "globals": {}
}
